{
    "name": "@lvchengbin/escape",
    "version": "0.0.3",
    "description": "A simple library for escaping specical characters in strings for HTML, CSS, RegExp, String, URL.",
    "keywords": [
        "escape",
        "encode",
        "encodeHTML",
        "encodeURL",
        "html",
        "string",
        "css",
        "url",
        "regexp",
        "regex"
    ],
    "repository": {
        "type": "git",
        "url": "git@github.com:LvChengbin/escape.git"
    },
    "devDependencies": {
        "buble": "^0.19.3",
        "eslint": "^5.8.0",
        "jasmine-core": "^3.3.0",
        "karma": "^3.1.1",
        "karma-chrome-launcher": "^2.2.0",
        "karma-jasmine": "^1.1.1",
        "karma-rollup-preprocessor": "^6.1.0",
        "karma-yolk-preprocessor": "0.0.7",
        "koa-static": "^5.0.0",
        "optimist": "^0.6.1",
        "pre-commit": "^1.2.2",
        "puppeteer": "^1.10.0",
        "rollup": "^0.67.0",
        "rollup-plugin-buble": "^0.19.2",
        "rollup-plugin-node-resolve": "^3.0.2"
    },
    "scripts": {
        "build": "rollup -c",
        "test": "karma start",
        "test-es5": "karma start --es5=true",
        "prepublish": "npm run build",
